/**index.wxss**/

.header {
  height: 60rpx;
  border-left: 2px solid lightgreen;
  margin-top: 10px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  padding-left: 10px;
  padding-right: 10px;
  justify-content: space-between;
  align-items: center;
}

.text-green {
  font-size: 12px;
  color: limegreen;
}

.recommand {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.recommand-item {
  width: 45%;
  height: 250rpx;
  margin: 4px;
  position: relative;
}

.recommand-image {
  width: 100%;
  height: 100%;
}

.recommand-text {
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 10px;
  width: 96%;
  padding-left: 2%;
  padding-right: 2%;
  padding-bottom: 2%;
  padding-top: 2%;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.1));
}

.divider {
  width: 100%;
  height: 5px;
  background-color: lightgray;
  margin-top: 10px;
}

.list-item {
  height: 500rpx;
  display: flex;
  flex-direction: column;
}

.list-item-images {
  width: 100%;
  height: 60%;
  position: relative;
}

.list-item-images-img {
  width: 100%;
  height: 100%;
}

.list-item-images-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -40rpx;
  right: 40rpx;
}

.list-item-texts {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.list-item-texts-text {
  color: gray;
  font-size: 10px;
  margin-top: 10px;
}
