.course-content {
  background: #f8f8f8;
  font-size: 30rpx;
  border: 1px #f8f8f8 solid;
}

.title {
  margin: 20rpx;
}

.info {
  color: #999;
  margin: 20rpx;
  background: white;
}

.task-list {
  margin: 15rpx;
  font-size: 30rpx;
  background-color: #f8f8f8;
}

.task-title {
  display: flex;
  direction: row;
}

.task-upload {
  position: absolute;
  right: 20rpx;
  margin-top: 20rpx;
}

.total {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
}

.order{
  font-size: 25rpx;
  color: #999;
  display: flex;
  direction: row;
  border-top: 15rpx white solid;
}

.order-title{
  margin-left: 20rpx;
}

.order-content{
  position: absolute;
  right: 20rpx;
}

.task {
  position: relative;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background-color: #f8f8f8;
  border-top: 5rpx white solid;
  border-bottom: 5rpx white solid;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.task-content {
  column-width: 40%;
  flex-direction: column;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.userinfo-name{
  margin-left: 20rpx;
}

.uptime {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  color: #999;
  font-size: 25rpx;
}




