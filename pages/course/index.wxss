.page {
  background-color: #f8f8f8;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.course {
  padding: 10px 15px;
  position: relative;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border: 5rpx white solid
}

.course-icon {
  font-size: 30rps;
}

.course-content {
  column-width: 40%;
  flex-direction: column;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}

.course-title {
  margin-left: 10rpx;
  font-size: 40rpx;
}

.course-info {
  margin-left: 10rpx;
  font-size: 30rpx;
}

.course-teacher {
  margin-left: 30rpx;
  font-size: 30rpx;
}

.course-uptime {
  position: absolute;
  top:15rpx;
  right: 15rpx;
  color: #999;
  font-size: 30rpx; 
}

.edit{
  margin-left: 20rpx;
}

/** 右箭头 */

.right-arrow {
  position: absolute;
  right: 30rpx;
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #999;
  border-right: 3rpx solid #999;
  transform: rotate(45deg);
}
